<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/transaction_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transaction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/transaction_date"
        app:layout_constraintStart_toEndOf="@id/transaction_image"
        app:layout_constraintTop_toTopOf="@id/transaction_image" />

    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/transaction_image"
        app:layout_constraintStart_toStartOf="@id/transaction_name"
        app:layout_constraintTop_toBottomOf="@id/transaction_name" />

    <TextView
        android:id="@+id/transaction_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/transaction_price_us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/transaction_image" />

    <TextView
        android:id="@+id/transaction_price_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/transaction_image"
        app:layout_constraintEnd_toEndOf="@id/transaction_price"
        app:layout_constraintTop_toBottomOf="@id/transaction_price" />

</androidx.constraintlayout.widget.ConstraintLayout>